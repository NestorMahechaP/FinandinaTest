@using WebClient.Models;
@model List<UserDto>
@{
    ViewData["Title"] = "User Page";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
</div>

<div class="card">
    <div class="card-header">
        List
    </div>
    <div class="card-body">

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>PhoneNumber</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Nationality</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Nationality</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>